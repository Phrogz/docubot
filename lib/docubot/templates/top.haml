!!! Strict
%html
	%head
		%meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
		%link{:rel=>'stylesheet', :type=>'text/css', :href=>"#{root}common.css", :media=>'all'}
		%title= page.title
	%body{ :class=>page.style }
		#content
			#pagetop
				#breadcrumb
					- toc = page.ancestors.first # The TOC has no page to link to
					= toc.short_title || toc.title
					%span.sep &gt;
					- page.ancestors[1..-1].each do |dad|
						%a{ :href=>root/dad.html_path }= dad.short_title || dad.title
						%span.sep &gt;
					= page.title
				%h1#title= page.title
				- if page.author?
					#author= page.author
			#pagebody
				#mainbody= contents
				#pagefooter
					Copyright Â©#{Time.now.year}#{ " #{global.company}" if global.company? }.
					All Rights Reserved.
